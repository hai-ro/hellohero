<%= render partial: 'layouts/header' %>

<main class="login-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <section>
      <h1>★事業所さんログイン画面★</h1>
    </section>
    <section class="sns-btn-container">
      <button class="sns-btn sns-btn__line">
        <i class="fab fa-line"></i>
        <p>LINEでログイン</p>
      </button>
    </section>
    <section class="login-mail--form">
      <div class="login-mail--title">
        <i class="far fa-envelope" aria-hidden="true"></i>
        <h2>メールアドレスでログイン</h2>
      </div>
      <div class="login-mail--form-contents">
        <h3>メールアドレス</h3>
        <%= f.email_field :email, autofocus: true, autocomplete: true, placeholder: "例：example@examle.com" %>
        <h3>パスワード</h3>
        <%= f.password_field :password, autocomplete: true, placeholder: "パスワード" %>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <%= f.submit "ログイン", class: "style-boder-smallradius style-login-btn" %>
      </div>
      <%= render "nursing_homes/shared/links" %>
    </section>
  <% end %>
</main>